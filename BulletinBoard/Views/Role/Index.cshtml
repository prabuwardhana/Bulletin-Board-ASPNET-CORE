@model System.Collections.Generic.IEnumerable<IdentityRole>

@{
    ViewBag.Title = "Role List";
}    
<div class="container">
    <div class="row">
        <div class="col-lg-2 col-md-2"></div>
        <div class="col-lg-8 col-md-8">
            <div class="card mb-3">
                <div class="card-body">
                    <table class="table table-hover">
                        <thead class="bg-primary text-white">
                            <tr>
                                <th>Role Name</th>
                                <th>Assigned Users</th>
                                <th></th>
                            </tr>
                        </thead>                
                        <tbody>
                        @if (Model.Count() == 0) 
                        {
                            <tr><td colspan="3" class="text-center">No Roles</td></tr>
                        }
                        else
                        {
                            foreach (var role in Model) 
                            {
                                <tr>
                                    <td>@role.Name</td>
                                    <td identity-role="@role.Id"></td>
                                    <td>
                                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@role.Id"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@role.Id"><i class="fa fa-trash text-white" aria-hidden="true"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                        </tbody>                
                    </table>
                </div>
            </div>
            <a class="btn btn-primary" asp-action="Create">Create</a>
        </div>
        <div class="col-lg-2 col-md-2"></div>        
    </div>    
</div>
