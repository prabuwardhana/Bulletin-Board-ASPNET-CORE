@model IEnumerable<MessageViewModel>

@if (Model.Count() > 0)
{
  @foreach (var m in Model)
  {
    <div class="row">
      <div class="col-12">
        <div class="message">
          <div>
            <span>From:</span>
            <a asp-controller="User" asp-action="Detail" asp-route-username="@m.FromUserName">@m.FromUserName</a>
          </div>
          <div>
            <span>To:</span>
            <a asp-controller="User" asp-action="Detail" asp-route-username="@m.ToUserName">@m.ToUserName</a>
          </div>
          <div>
            <span>Subject:</span>
            <a asp-action="Detail" asp-route-id="@m.Id">@m.Title</a>
          </div>
          <div>
            <span>@m.SendDateTime.ToShortDateString()</span>
          </div>
          <div>
            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@m.Id">
              <i class="fas fa-trash-alt"></i>
            </a>
          </div>
        </div>
      </div>
    </div> 
  }  
}
else
{
  <p class="mb-0">
    There is no message.
  </p>
}     